button::after {
  border: none;
}

::-webkit-scrollbar {
  width: 0 !important;
  height: 0 !important;
  color: transparent;
}

.helpTip {
  width: 80%;
  max-height: 64%;
  background-color: #d1dbfa;
  position: fixed;
  top: 12%;
  left: 10%;
  border-radius: 10px;
  overflow-y: scroll;
  padding-bottom: 30px;
  z-index: 1000000;
}

.tipItem {
  padding: 8px 12px 8px 12px;
  color: #123bb6;
}

.tipBtn {
  position: absolute;
  bottom: 8px;
  text-align: center;
  width: 100%;
  margin-top: 16px;
  font-size: 18px;
  cursor: pointer;
}

.tipTitle {
  text-align: center;
  padding-top: 8px;
  font-size: 18px;
  font-weight: bold;
}

.tipBtnText {
  border-radius: 8px;
  padding: 8px 16px;
  cursor: pointer;
}

.tipBtnText:hover {
  font-weight: bold;
}
