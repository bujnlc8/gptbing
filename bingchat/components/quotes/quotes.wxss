.quote {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background-color: #f4f6f8;
  border-radius: 0rpx 16rpx 0rpx 16rpx;
  padding: 10rpx 16rpx 10rpx 16rpx;
  margin-top: -16rpx;
}

.quote-item {
  background-color: #D1DBFA;
  display: inline-block;
  padding: 5rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  color: #123BB6;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  cursor: pointer;
  word-break: break-all;
  min-width: 100%;
}
